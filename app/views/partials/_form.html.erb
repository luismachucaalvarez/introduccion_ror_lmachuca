<%= form_for :pin, url: pins_path do |f| %>

<% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@pin.errors.count, "error") %> prohibio a este pin ser guardado:
      </h2>
      <ul>
        <% @pin.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
